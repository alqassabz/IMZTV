<h1 id="editProfile">Edit User</h1>
<form action="/user/update" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="id" value="<%= user._id %>">
    
    <br>

    <div>
        <% if(user.image===null) {%>
            <a href="/user/update-avatar?id=<%= user._id %>"><img src="<%= user.avatar %>" id="profileImg"> </a> 
            <%}else{%>
                <a href="/user/update-avatar?id=<%= user._id %>"><img src="/images/<%= user.image %>" id="profileImg"> </a> 
            <%}%>
    </div>

    <div id="editProfile">
        <td> <h4>Email: <%= user.email %></h4></td>
    </div>

    <div id="editProfile">
        <h4><label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required ></h4>
    </div>

    <div id="editProfile"></div>
        <h4><label for="avatar">Change Avatar:</label>
        <input type="file" name="image" value="<%= user.image %>"></h4>
    </div>

    <br>

    <div>
        <input type="submit" class="btn btn-outline-primary" id="nameEditButton" value="Submit" />
    </div>
    
</form>
