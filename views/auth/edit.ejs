<h1>Edit User</h1>
<form action="/user/update" method="POST">
    <input type="hidden" name="id" value="<%= user._id %>">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required>
    </div>
    <div>
        <button type="submit">Update</button>
    </div>
</form>