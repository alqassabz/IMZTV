    <div class="navbar-container">
        <div class="logo-container">
            <h1 class="logo">IMZ.TV</h1>
        </div>
        <div class="menu-container">
            <ul class="menu-list">
               <a class="noStyle" href="/"><li class="menu-list-item active">Home</li></a> 
              <% if (user) { %>
                <% if(user.image===null) {%>
                    <img src="<%= user.avatar %>" class="menu-list-item" id="profileImg"> 
                    <a href="/user/update?id=<%= user._id %>"><li class="menu-list-item"><%= user.name %></li></a>
                    <%}else{%>
                        <img src="/images/<%= user.image %>" class="menu-list-item" id="profileImg">
                        <a href="/user/update?id=<%= user._id %>"><li class="menu-list-item"><%= user.name %></li></a>
                    <%}%>
               <% } %>
               
               <% if (user) { %>
