<h1>Movies</h1>

<table class="table table-dark table-striped">
<tr>
  <th>Title</th>
  <th>Poster</th>
  <th>Film</th>
  <th>Trailer</th>
  <th>Description</th>
  <th>Updated At</th>
  <th>Edit</th>
  <th>Delete</th>
</tr>

<% movies.forEach(function(movie){ %>
<tr>
  <td>
    <a href="/movie/detail?id=<%= movie._id %>">
      <%= movie.name %>
    </a>
  </td>
  <td>
    <a href="/movie/detail?id=<%= movie._id %>"> <img src="/images/<%= movie.poster%>" /></a>
  </td>
  <td>
    <img src="/images/<%= movie.film %>" />
  </td>
  <td>
    <img src="/images/<%= movie.trailer %>" />
  </td>
  <td>
    <%= movie.description %>
  </td>
  <td>
    <%= dayjs(movie.createdAt).fromNow(true) %> ago
  </td>
  <td>
    <%= dayjs(movie.createdAt).fromNow(true) %> ago
  </td>
  <td>
    <a class="btn btn-outline-secondary" href="/movie/edit?id=<%= movie._id %>">
      Edit
    </a>
  </td>
  <td>
    <a class="btn btn-outline-secondary" href="/movie/delete?id=<%= movie._id %>">
      Delete
    </a>
  </td>
  
</tr>

<% }) %>

</table>