<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Detail</title>
  <style>
    /* Modal container */
    .modal {
      display: block; /* Show the modal immediately */
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
    }

    /* Modal content (video player) */
    .modal-content {
      position: relative;
      margin: auto;
      padding: 0;
      width: 80%;
      max-width: 700px;
      top: 10%;
    }

    /* Video in the modal */
    .modal-content video {
      width: 100%;
      height: auto;
    }

    /* Close button */
    .close {
      position: absolute;
      top: 10px;
      right: 15px;
      color: white;
      font-size: 30px;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <!-- Modal (Popup) -->
  <div id="videoModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <!-- Video player with autoplay and controls -->
      <video id="videoPlayer" autoplay controls>
        <source src="/videos/orphan.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

  <script>
    // Get modal element
    var modal = document.getElementById("videoModal");

    // Get close button (X)
    var span = document.getElementsByClassName("close")[0];

    // Close the modal when the user clicks on X
    span.onclick = function() {
      modal.style.display = "none";
      document.getElementById("videoPlayer").pause(); // Pause video when modal closes
    }

    // Close the modal if the user clicks outside the video player
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
        document.getElementById("videoPlayer").pause(); // Pause video
      }
    }
  </script>
</body>
</html>
