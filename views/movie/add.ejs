<form
  action="/movie/add"
  method="POST"
  enctype="multipart/form-data"
  class="add-movie-form"
>
  <h1 class="add-movie-title">Add Movie</h1>

  <div class="form-group">
    <label class="form-label">Title</label>
    <input type="text" name="name" class="form-control form-input" required />
  </div>

  <div class="form-group">
    <label class="form-label">Movie</label>
    <input type="file" name="trailer" class="form-control form-input" />
  </div>
  <div class="form-group">
    <label class="form-label">Type</label>
    <select name="genre" class="form-control form-input" required>
      <option value="Anime">Anime</option>
      <option value="Animated">Animated</option>
      <option value="Action">Action</option>
      <option value="Comedy">Comedy</option>
      <option value="Horror">Horror</option>
    </select>
  </div>

  <br />
  <button type="submit" class="btn add-movie-button">Add Movie</button>
</form>
