<form
  action="/movie/add"
  method="POST"
  enctype="multipart/form-data"
  class="add-movie-form"
>
  <h1 class="add-movie-title">Add Review</h1>

  <div class="form-group">
    <label class="form-label"></label>
    <input
      type="text"
      name="name"
      value="<%= user.name %>"
      class="form-control form-input"
      required
    />
  </div>

  <div class="form-group">
    <label class="form-label">Review</label>
    <input type="text" name="review" class="form-control form-input" />
  </div>

  <div class="form-group">
    <label>Movie</label>
    <select name="movie" class="form-control form-input" required>
      <% movies.forEach((movie) => { %>
      <option value="<%= movie._id%>"><%= movie.title%></option>
      <% }) %>
    </select>
  </div>

  <br />
  <button type="submit" class="btn add-movie-button">Add Review</button>
</form>
